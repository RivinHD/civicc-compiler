/// Calculates the greates common divider of a and b.
/// If b is zero than zero is returned.
export int gcd(int a, int b) {
    int rest;

    if (b == 0 || a == 0) {
        return 0;
    }

    rest = a % b;

    while(rest != 0) {
        a = b;
        b = rest;
        rest = a % b;
    }

    return b;
}

/// Calculates the factorial of n.
/// If n is negativ than n is returned, because a factorial is not defined on negativ numbers.
export int fac(int n) {
    int factorial = 1;

    if (n == 0) {
        return 1;
    } else if (n < 0) {
        return n;
    } 

    for (int i = n, 0, -1) {
        factorial = factorial * i;
    }

    return factorial;
}

/// Calculates the fibonacci number recursivly.
/// Negativ n are not defined for the fibonacci sequence and therefore return zero.
export int fib(int n) {
    if (n >= 3) {
        return fib(n - 1) + fib(n - 2);
    } else if(n <= 0) {
        return 0;
    }
        return 1;
}

/// Naivly computes if the given number is a prime number.
export bool isprime(int n) {
    if (n <= 1) {
        return false;
    } else if (n == 2 || n == 3 || n == 5 || n == 7) {
        return true;
    } else if (n % 2 == 0 || n % 3 == 0 || n % 5 == 0 || n % 7 == 0) {
        return false;
    } 

    for (int i = 11, n, 1) {
        if (n % i == 0) {
            return false;
        }
    }

    return true;
}
