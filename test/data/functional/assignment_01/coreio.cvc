#include "civic.h"
#include "core.h"

/// Prints the first n prime numbers
export void fibs(int n) {
    if (n <= 0) {
        printInt(fib(0));
        return;
    }

    for(int i = 1, n + 1, 1) {
        printInt(fib(i));
        printSpaces(1);
    }
}

/// Print the first n prime numbers; 
export void primes(int n) {
    int MAX_INT = 2147483647;
    int primeCount = 0;

    /// Naivly computes if the given number is a prime number.
    bool isprime(int n) {
        if (n <= 1) {
            return false;
        } else if (n == 2 || n == 3 || n == 5 || n == 7) {
            return true;
        } else if (n % 2 == 0 || n % 3 == 0 || n % 5 == 0 || n % 7 == 0) {
            return false;
        } 

        for (int i = 11, n, 1) {
            if (n % i == 0) {
                return false;
            }
        }

        return true;
    }

    if (n <= 1) {
        return;
    }

    for (int i = 0, MAX_INT, 1) {
        if (isprime(i)) {
            printInt(i);
            printSpaces(1);

            primeCount = primeCount + 1;
            if (primeCount == n) {
                return;
            }
        }
    }
}
